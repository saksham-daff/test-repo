pipeline {
    agent any
    environment {
	PATH = "/opt/android-sdk/tools:/opt/android-sdk/platform-tools:${PATH}:/usr/sbin:/sbin:/opt/aws/bin:/var/lib/jenkins/.rvm/bin:/var/lib/jenkins/.rvm/bin:/usr/local/bin/ecs-cli:/usr/bin/aws"
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Jenkins File Inside folder"'
                sh 'echo "${PATH}"'
            }
        }
	
	}
    post {
        always {
            echo 'This will run only if the run was mar'
        }
        success {
            emailext body: '${DEFAULT_CONTENT}', postsendScript: '${DEFAULT_POSTSEND_SCRIPT}', from: 'saksham', presendScript: '${DEFAULT_PRESEND_SCRIPT}', replyTo: '${PROJECT_DEFAULT_REPLYTO}', subject: '${DEFAULT_SUBJECT}', to: 'saksham.gupta@daffodilsw.com'
        }
        failure {
            mail bcc: '', body: '${DEFAULT_CONTENT}', cc: '', from: 'saksham', replyTo: '${PROJECT_DEFAULT_REPLYTO}', subject: '${DEFAULT_SUBJECT}', to: 'saksham.gupta@daffodilsw.com, '
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
            echo 'For example, if the Pipeline was previously failing but is now successful'
        }
    }
}
